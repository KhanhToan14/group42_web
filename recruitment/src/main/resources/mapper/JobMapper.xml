        SELECT JOB_NM
        FROM JOB_TB
        WHERE ID = #{id}
        AND DEL_YN = 0
    </select>
    <select id="listJobByCompanyId" resultMap="job" parameterType="int">
        SELECT *
        FROM JOB_TB
        WHERE COMPANY_ID = #{companyId}
        AND DEL_YN = 0
    </select>
</mapper>